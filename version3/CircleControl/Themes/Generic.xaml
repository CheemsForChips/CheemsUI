<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CircleControl">


    <Style TargetType="{x:Type local:SectorButton}">
        <Setter Property="Template">
            
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SectorButton}">
                    <Border>
                        <Path x:Name="Path"
                            Data="M0,0 a20,20,0,0,1,14.1,5.9 l-7.07,7.07 a10,10,0,0,0,-7.07,-2.93 z"
                            Fill="{TemplateBinding SectorFill}"
                            Stretch="Uniform" 
                            SnapsToDevicePixels="true"
                              Stroke="LightGray"
                              StrokeThickness="2"/>
                    </Border>
                </ControlTemplate>
                
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
